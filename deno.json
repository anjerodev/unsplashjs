{
  "tasks": {
    "dev": "deno run --allow-net src/main.ts",
    "dev:watch": "deno run --allow-net --watch src/main.ts",
    "format": "deno fmt src/",
    "lint": "deno lint src/"
  },
  "imports": {
    "@/": "./src/",
    "@std/assert": "jsr:@std/assert@1"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  }
}
